@model DotNetCoreJquery.Models.CitiesInfo
@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        <div class="col-md-12">
            <h1>Country State City</h1>

        <div class="row ">
                <div class="col-md-3">
                    Country
                </div>
                <div class="col-md-9">
                <select id="ddlCountry" class="form-control">
                        @*<option value="">Select Country</option>*@
                    @foreach(var item in Model.CountryInfosList)
                    {
                        <option value="@item.CId">@item.CName</option>
                    }
                   
                    </select>
                </div>
            </div>

        <div class="row">
                <div class="col-md-3">
                    State
                </div>
                <div class="col-md-9">
                    <select id="ddlState" class="form-control">
                        <option value="">Select state</option>
                        <option value="1">Delhi</option>
                        <option value="2">Bihar</option>
                    </select>
                </div>
            </div>

        <div class="row">
                <div class="col-md-3">
                    City
                </div>
                <div class="col-md-9">
                <select id="ddlCity" class="form-control">
                        <option value="">Select City</option>
                        <option value="1">Delhi</option>
                        <option value="2">Mumbai</option>
                    </select>
                </div>
            </div>
        </div>
    </div>